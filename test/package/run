#! /bin/sh

set -e # fail on error
set -x # be verbose

cp build/helm/readiness-missing/original.yaml build/helm/readiness-missing/values.yaml
cp build/helm/readiness-override/original.yaml build/helm/readiness-override/values.yaml

../../package

diff build/helm/readiness-missing/values.yaml build/helm/readiness-missing/expected.yaml
diff build/helm/readiness-override/values.yaml build/helm/readiness-override/expected.yaml
